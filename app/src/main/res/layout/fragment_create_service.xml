<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewCreateService"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Category"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/select_category" />

        <Button
            android:id="@+id/buttonAddCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Category"
            android:layout_marginTop="4dp" />

        <EditText
            android:id="@+id/editTextServiceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Service Name"
            android:layout_marginTop="16dp"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextServiceDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Service Description"
            android:layout_marginTop="8dp"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/editTextServiceCharacteristics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Service Characteristics"
            android:layout_marginTop="8dp"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/editTextServicePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:layout_marginTop="8dp"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editTextServiceDiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Discount (%)"
            android:layout_marginTop="8dp"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Images"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/buttonUploadImages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Images"
            android:layout_marginTop="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Types"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/textViewSelectedEventTypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select event types"
            android:drawableEnd="@android:drawable/ic_menu_more"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="4dp" />

        <CheckBox
            android:id="@+id/checkBoxVisibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visible to users"
            android:layout_marginTop="16dp" />

        <CheckBox
            android:id="@+id/checkBoxAvailability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available for booking"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editTextBookingDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Booking Duration (minutes)"
            android:layout_marginTop="16dp"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextMinParticipation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Minimum Participation (hours)"
            android:layout_marginTop="8dp"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextMaxParticipation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Maximum Participation (hours)"
            android:layout_marginTop="8dp"
            android:inputType="number" />

        <!-- Booking Period -->
        <EditText
            android:id="@+id/editTextBookingPeriod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Booking Period (days)"
            android:layout_marginTop="16dp"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextCancellationPeriod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cancellation Period (days)"
            android:layout_marginTop="8dp"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Confirmation Method"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/radioGroupConfirmationMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/radioAutomatic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Automatic" />

            <RadioButton
                android:id="@+id/radioManual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manual" />
        </RadioGroup>

        <Button
            android:id="@+id/buttonSubmitService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="48dp"/>

    </LinearLayout>
</ScrollView>